# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration (to be integrated with Team Member 1)
DATABASE_URL=postgresql://username:password@localhost:5432/canteen_ordering

# Redis Configuration (for Bull queue and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration (for authentication - to be integrated with Team Member 1)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio - for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Order Configuration
ORDER_TIMEOUT_MINUTES=15
AUTO_CANCELLATION_CHECK_INTERVAL=1

# API Configuration
API_BASE_URL=http://localhost:3003/api/v1

# Logging
LOG_LEVEL=info
